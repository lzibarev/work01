<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://documentum.emc.com/2010/UI-Model"
        id="lev_button" xtype="lev_button" version="1.0.0000.001">

    <name>lev Button</name>
    <description>Lev</description>

    <icon src="icons/button_wig.png" width="16" height="16" />
    <icon src="icons/button_24_wig.png" width="24" height="24" />

    <content src="content/lev/widgets/Button.js" type="text/javascript"/>
    <content src="content/lev/widgets/designer/Button.js" type="text/javascript" mode="design"/>

    <category>xcpPalette:Custom</category>

    <configuration>
        <propertyInfo name="title" localizable="true">
            <label>Title</label>
            <type>STRING</type>
			<defaultvalue>Настройка процесса согласования</defaultvalue>
			<constraint>
	            <validator type="maxLength" maxLength="120"/>
            </constraint>
        </propertyInfo>
        <propertyInfo name="columns" localizable="true">
            <label>Columns</label>
            <type>STRING</type>
			<defaultvalue>ДИТ,ДТЭ,ТехБлок,ЭкспФилиал</defaultvalue>
			<constraint>
	            <validator type="maxLength" maxLength="120"/>
            </constraint>
        </propertyInfo>
        <propertyInfo name="store" localizable="true">
            <label>Store</label>
            <type>STRING</type>
			<defaultvalue>test-1,true,true,false,true</defaultvalue>
			<constraint>
	            <validator type="maxLength" maxLength="1200"/>
            </constraint>
        </propertyInfo>
        
        <propertyInfo name="externalURL" required="true">
            <type>EXPRESSION</type>
            <expression>
                <setterFunName>setValue</setterFunName>
                <contextTree>
                    <include>PRIMARY_CONTEXT</include>
                	<include>APP_CONTEXT</include>
                	<include>WIDGET_CONTEXT</include>
                	<include>DATASOURCE_OUTPUT</include>
                	<include>SINGLE_OBJECT_DATA_SERVICE_OUTPUT</include>
                </contextTree>
            </expression>
        </propertyInfo>
        
        <propertyInfo name="debug">
        	<label>Debug</label>
        	<type>BOOLEAN</type>
        	<defaultvalue>false</defaultvalue>
        </propertyInfo>
        
        <propertyInfo name="disabled">
            <label>Disabled when</label>
            <type>EXPRESSION</type>
            <expression>
                <setterFunName>setDisabled</setterFunName>
                <contextTree>
                    <include>PRIMARY_CONTEXT</include>
                    <include>APP_CONTEXT</include>
                    <include>WIDGET_CONTEXT</include>
                </contextTree>
            </expression>
        </propertyInfo>
        
        <propertyInfo name="hidden">
            <label>Hidden when</label>
            <type>EXPRESSION</type>
            <expression>
                <setterFunName>setHidden</setterFunName>
                <contextTree>
                    <include>PRIMARY_CONTEXT</include>
                    <include>APP_CONTEXT</include>
                    <include>WIDGET_CONTEXT</include>
                </contextTree>
            </expression>
        </propertyInfo>
        
    </configuration>

</widget>
